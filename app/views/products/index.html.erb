<header class="page-header">
  <h1>Products</h1>
  <%= link_to('+ New Product', new_product_path, :class => 'btn btn-primary btn-lg') %>
</header>

<%= render :partial => 'shared/table', :locals => {:table => {
  :headers => @products.first.attributes.keys + ['show', 'edit', 'delete'],
  :rows => @products.map do |p|
    row = p.attributes.keys.map do |a|
      if a == 'category_id'
        link_to(p.category.name, category_path(p.category.id))
      else
        p.attributes[a]
      end
    end
    row << link_to('show', product_path(p.id))
    row << link_to('edit', edit_product_path(p.id))
    row << link_to('delete', product_path(p.id), :method => 'delete', :class => 'text-danger', :data => {:confirm => 'Delete?'})
  end
}} %>