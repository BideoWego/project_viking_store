<%= render :partial => 'shared/table', :locals => {:table => {
  :headers => ['Key', 'Value'],
  :rows => product.attributes.keys.map {|a| [a, product.attributes[a]]}
}} %>

<div class="btn-group">
  <%
  [
    link_to('Edit', edit_product_path(product.id), :class => 'btn btn-primary'),
    link_to('Delete', product_path(product.id), :class => 'btn btn-danger', :data => {:confirm => 'Delete?'})
  ].each do |link|
  %>
    <%= link %>
  <% end %>
</div>