<header class="page-header">
  <h1>Categories</h1>
  <%= link_to('+ New Category', new_category_path, :class => 'btn btn-primary btn-lg') %>
</header>

<% if @categories.empty? %>
  <p>No categories found</p>
<% else %>
  <%= render :partial => 'shared/table', :locals => {:table => {
    :headers => ['ID', 'Name', 'Show', 'Edit', 'Delete'],
    :rows => @categories.map do |category|
      [
        category.id,
        category.name,
        link_to('Show', category_path(category)),
        link_to('Edit', edit_category_path(category)),
        link_to('Delete', category_path(category), :method => 'delete', :class => 'text-danger', :data => {:confirm => 'Delete?'})
      ]
    end
  }} %>
<% end %>
